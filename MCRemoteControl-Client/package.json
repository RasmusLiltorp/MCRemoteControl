{
  "name": "mcremotecontrol-client",
  "private": true,
  "author": "Rasmus Liltorp",
  "description": "MCRemoteControl: A tool to remotely manage Minecraft servers",
  "version": "1.0.3",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "deploy": "electron-builder build --publish always",
    "electron": "electron .",
    "dev:electron": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build:electron": "npm run build && electron-builder"
  },
  "build": {
    "asar": true,
    "compression": "maximum",
    "appId": "com.example.mcremotecontrol",
    "icon": "build/icon.ico",
    "productName": "MCRemoteControl",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!**/tests/",
      "!**/docs/",
      "!**/*.map"
    ],
    "win": {
      "target": [
        {
          "target": "nsis-web",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "shortcutName": "MCRemoteControl"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "RasmusLiltorp",
        "repo": "MCRemoteControl"
      }
    ]
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.14",
    "axios": "^1.8.3",
    "electron-updater": "^6.3.9",
    "fs-extra": "^11.3.0",
    "vue": "^3.5.13",
    "vue-electron": "^1.0.6"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.2",
    "@types/node": "^22.13.10",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.14",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vue-tsc": "^2.2.4",
    "wait-on": "^7.2.0"
  }
}
