<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Title="MCRemoteControl" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="client.MainWindow" Width="450" Height="350">

    <Grid>
        <!-- Main Content -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
            <TextBlock Text="MCRemoteControl" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <!-- Server Address Input -->
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBox Name="ServerAddressInput" Width="250" Watermark="Enter Server IP..."/>
                <Button Content="Connect" Click="Connect_Click"/>
            </StackPanel>

            <Separator Width="300"/>

            <!-- Status Indicator -->
            <TextBlock Name="StatusText" FontSize="14" HorizontalAlignment="Center"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Start Server" Click="StartServer_Click"/>
                <Button Content="Stop Server" Click="StopServer_Click"/>
            </StackPanel>

            <Separator Width="300"/>

            <!-- Key Management -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Generate Key Pair" Click="GenerateKeys_Click"/>
                <Button Name="SettingsButton" Content="⚙️" Width="34" Height="30" Click="OpenSettings_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
    
</Window>